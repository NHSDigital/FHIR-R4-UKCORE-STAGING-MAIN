<Condition xmlns="http://hl7.org/fhir">
  <id value="UKCore-Extension-Translation-Example" />
  <text>
    <status value="additional" />
    <div xmlns="http://www.w3.org/1999/xhtml">An example to illustrate the translation extension from one language to another</div>
  </text>
  <code>
    <coding>
      <system value="http://snomed.info/sct" />
      <code value="22298006" />
      <display value="Myocardial infarction">
        <extension url="http://hl7.org/fhir/StructureDefinition/translation">
          <extension url="lang">
            <valueCode value="fr" />
          </extension>
          <extension url="content">
            <valueString value="Infarctus du myocarde" />
          </extension>
        </extension>
      </display>
    </coding>
  </code>
  <subject>
    <reference value="Patient/UKCore-Patient-RichardSmith-Example" />
  </subject>
</Condition>
